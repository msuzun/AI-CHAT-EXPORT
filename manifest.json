{
  "manifest_version": 3,
  "name": "AI Chat PDF Export",
  "version": "1.0.0",
  "description": "Export AI chat conversations to PDF with full support for images, math, and special characters",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*","https://platform.deepseek.com/*","https://*.deepseek.com/*",
    "https://claude.ai/*",
    "https://*.google.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*","https://platform.deepseek.com/*","https://*.deepseek.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
